  <!--wyszukiwanie po klucz u i po wartoÅ›ci-->
  <%=
  @previous_parent = ""
  number_of_px = 0;
  @file_lines.each do |line|%>
    <%if(line['locale_value'].class!=Hash)
      if(line['locale_parent']!=@previous_parent)
        %>
      </ul>
        <div class="parent_node">parent node: <%=line['locale_parent_key']%> </div>
        <ul style="display: block; clean: both">
      <%end
      @previous_parent = line['locale_parent']
      %>
      <li class="value" style="">
        <input type="hidden" value="<%=line['locale_id']%>" name="lines[]locale_id">
        <input type="hidden" value="<%=line['locale_key']%>" name="lines[]locale_key">
        <div class="key" style="font-weight: bold"><%=line['locale_id']%>: <%=line['locale_key']%></div>
        <textarea cols="40" rows="3" style="font-size: 100%;" name="lines[]locale_value"><%endline=""
          if(line['locale_value'].class==String)
            endline=line['locale_value'].gsub(/\A\p{Space}*|\p{Space}*\z/, '')
          else
            endline=line['locale_value']
          end
          %><%=endline%>
        </textarea>
      </li>
    <%end #end of "if" checking Hash%>
  <%end%>
